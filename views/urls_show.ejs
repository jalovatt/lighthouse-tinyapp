<% include ./partials/_header %>

<h2>URL Details</h2>

<table>
  <tr>
    <th>Short URL</th>
    <th>Destination</th>
  </tr>
  <tr>
    <td><input type="text" readonly class="shortURL" value="localhost:8080/u/<%= shortURL %>"></td>
    <form method="POST" action="/urls/<%= shortURL %>?_method=PUT">
      <td><input type="text" class="longURL" name="newURL" value="<%= url %>"></td>
      <td><input type="submit" value="Update"></td>
    </form>
  </tr>
</table>
<br>
<h3><span class="visitorsSince">Traffic since <%= fTime(created) %>, <%= fDate(created) %></span></h3>
<table>
  <tr>
    <th>Visits</th>
    <th>Unique Visitors</th>
  </tr>
  <tr>
    <td><%= visits.length %></td>
    <td><%= uniqueVisitors %></td>
  </tr>
</table>
<br>
<table class="visitTable">
  <tr>
    <th class="visitorColumn">Visitor</th>
    <th class="dateColumn">Date</th>
  </tr>
  <% visits.forEach( visit => { %>
    <tr>
      <td><%= visit.id %></td>
      <td><%= fTime(visit.date) %>, <%= fDate(visit.date) %></td>
    </tr>
  <% }); %>

</table>

<% include ./partials/_footer %>
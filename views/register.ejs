<% include ./partials/_header %>

<h2>Register</h2>
<form method="POST" action="/register">
  <label for="email">Email Address:</label><input type="email" name="email"><br>
  <label for="pwd">Password:</label><input type="password" name="pwd"><br>
  <br>
  <input type="submit" value="Submit">
</form>
<% if (locals.userExists) { %>
  <br>
  <h4 class="err">A user with that email address already exists</h4>
<% } else if (locals.invalidData) { %>
  <br>
  <h4 class="err">Invalid email address or password</h4>
<% } %>

<% include ./partials/_footer %>